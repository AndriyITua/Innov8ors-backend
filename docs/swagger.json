    "/water/today": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get water consumption for today",
        "operationId": "getTodayWater",
        "description": "Retrieve water consumption records for the current day for the logged-in user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved water consumption records for today",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Water consumption for today retrieved successfully!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "totalConsumed": {
                          "type": "integer",
                          "description": "Total amount of water consumed today (ml)",
                          "example": 1200
                        },
                        "dailyRate": {
                          "type": "integer",
                          "description": "User daily water rate (ml)",
                          "example": 1500
                        },
                        "percentage": {
                          "type": "integer",
                          "description": "Percentage of daily water goal consumed",
                          "example": 80
                        },
                        "records": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/waterRecord"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/water/{year}/{month}": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get monthly water consumption",
        "operationId": "getMonthWater",
        "description": "Get water consumption for a specific month for the authenticated user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "year",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 2024
            }
          },
          {
            "in": "path",
            "name": "month",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12,
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get water consumption for the specified month",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully retrieved water consumption for October 2024"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "date": {
                            "type": "string",
                            "example": "15, October"
                          },
                          "dailyRate": {
                            "type": "integer",
                            "example": 1500
                          },
                          "percentage": {
                            "type": "integer",
                            "example": 90
                          },
                          "consumptionCount": {
                            "type": "integer",
                            "example": 3
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "auth": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "example": "example@example.com",
            "pattern": "^\\w+([.-]?\\w+)*@\\w+([.-]?\\w+)*(\\.\\w{2,3})+$"
          },
          "password": {
            "type": "string",
            "example": "password123",
            "minLength": 8
          }
        }
      },
      "patchUser": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "JohnDoe"
          },
          "email": {
            "type": "string",
            "example": "newemail@example.com",
            "pattern": "^\\w+([.-]?\\w+)*@\\w+([.-]?\\w+)*(\\.\\w{2,3})+$"
          },
          "gender": {
            "type": "string",
            "example": "man",
            "enum": [
              "woman",
              "man"
            ]
          },
          "dailynormwater": {
            "type": "number",
            "example": 2500,
            "minimum": 0,
            "maximum": 15000
          }
        }
      },
      "changePassword": {
        "type": "object",
        "required": [
          "password",
          "newPassword",
          "repeatNewPassword"
        ],
        "properties": {
          "password": {
            "type": "string",
            "example": "currentPassword123",
            "minLength": 8
          },
          "newPassword": {
            "type": "string",
            "example": "newPassword123",
            "minLength": 8
          },
          "repeatNewPassword": {
            "type": "string",
            "example": "newPassword123"
          }
        }
