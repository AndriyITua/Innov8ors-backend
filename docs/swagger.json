{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Water consumption app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of water consumption app"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "Water",
      "description": "Operations about water consumption."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/water/today": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get water consumption for today",
        "operationId": "getTodayWater",
        "description": "Retrieve water consumption records for the current day for the logged-in user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved water consumption records for today",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Water consumption for today retrieved successfully!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "totalConsumed": {
                          "type": "integer",
                          "description": "Total amount of water consumed today (ml)",
                          "example": 1200
                        },
                        "dailyRate": {
                          "type": "integer",
                          "description": "User daily water rate (ml)",
                          "example": 1500
                        },
                        "percentage": {
                          "type": "integer",
                          "description": "Percentage of daily water goal consumed",
                          "example": 80
                        },
                        "records": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/waterRecord"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/water/{year}/{month}": {
      "get": {
        "tags": [
          "Water"
        ],
        "summary": "Get monthly water consumption",
        "operationId": "getMonthWater",
        "description": "Get water consumption for a specific month for the authenticated user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "year",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 2024
            }
          },
          {
            "in": "path",
            "name": "month",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 12,
              "example": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get water consumption for the specified month",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully retrieved water consumption for October 2024"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "date": {
                            "type": "string",
                            "example": "15, October"
                          },
                          "dailyRate": {
                            "type": "integer",
                            "example": 1500
                          },
                          "percentage": {
                            "type": "integer",
                            "example": 90
                          },
                          "consumptionCount": {
                            "type": "integer",
                            "example": 3
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "waterRecord": {
        "type": "object",
        "required": [
          "id",
          "amount",
          "createdAt"
        ],
        "properties": {
          "id": {
            "type": "string",
            "example": "65ca67e7ae7f10c88b598384"
          },
          "amount": {
            "type": "integer",
            "description": "Amount of water consumed in ml",
            "example": 300
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Time when the water consumption was recorded",
            "example": "2024-10-16T14:48:00.000Z"
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Not Found error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "NotFoundError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Contact not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}